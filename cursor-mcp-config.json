{
  "mcpServers": {
    "mobile-mcp": {
      "command": "node",
      "args": [
        "<YOUR_PATH_TO_REPO>/mobile-mcp/lib/index.js"
      ],
      "env": {
        "NODE_ENV": "production"
      },
      "disabled": false,
      "alwaysAllow": [],
      "_comment": "Replace <YOUR_PATH_TO_REPO> with your actual path, e.g., /Users/username or /home/username"
    }
  }
}
